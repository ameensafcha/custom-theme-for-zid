<section
  section-id="{{ sectionId }}"
  class="bg-foreground hidden px-4 py-6 md:block md:p-16"
>
  <div class="theme-container">
    {% if settings.store_features %}
      <div class="grid grid-cols-2 gap-4 text-center lg:grid-cols-4">
        {% for feature in settings.store_features %}
          <div class="flex flex-col items-center gap-4">
            <img
              src="{{ feature.image }}"
              alt="{{ feature.title }}"
              class="h-12 w-12 object-contain"
              {% if loop.index0 > 0 %}loading="lazy"{% endif %}
            />
            <div class="space-y-2">
              <h3 class="text-primary text-[24px] leading-[33.6px] [font-variant:all-small-caps]">
                {{ feature.title }}
              </h3>
              {% if feature.description %}
                <p class="text-primary text-[16px] leading-[24px]">{{ feature.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>
