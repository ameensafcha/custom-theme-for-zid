      "type": "select",
      "label": {
        "ar": "موضع الخلفية",
        "en": "Background Position"
      },
      "options": [
        {
          "value": "center",
          "label": {
            "ar": "وسط",
            "en": "Center"
          }
        },
        {
          "value": "top",
          "label": {
            "ar": "أعلى",
            "en": "Top"
          }
        },
        {
          "value": "bottom",
          "label": {
            "ar": "أسفل",
            "en": "Bottom"
          }
        }
