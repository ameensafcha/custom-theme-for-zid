{
  "template": "sections/countdown.jinja",
  "name": {
    "ar": "العد التنازلي",
    "en": "Countdown Timer"
  },
  "settings": [
    {
      "id": "badge_text",
      "type": "text",
      "label": {
        "ar": "نص الشارة",
        "en": "Badge Text"
      },
      "default": ""
    },
    {
      "id": "title",
      "type": "text",
      "label": {
        "ar": "العنوان",
        "en": "Title"
      },
      "default": ""
    },
    {
      "id": "description",
      "type": "textarea",
      "label": {
        "ar": "الوصف",
        "en": "Description"
      },
      "default": ""
    },
    {
      "id": "end_date",
      "type": "date",
      "label": {
        "ar": "تاريخ الانتهاء",
        "en": "End Date"
      },
      "info": {
        "ar": "الصيغة المطلوبة: YYYY-MM-DD (مثال: 2025-12-31)",
        "en": "Required format: YYYY-MM-DD (e.g., 2025-12-31)"
      },
      "default": ""
    },
    {
      "id": "button_text",
      "type": "text",
      "label": {
        "ar": "نص الزر",
        "en": "Button Text"
      },
      "default": ""
    },
    {
      "id": "button_url",
      "type": "url",
      "label": {
        "ar": "رابط الزر",
        "en": "Button URL"
      },
      "default": ""
    },
    {
      "id": "background_image",
      "type": "image",
      "label": {
        "ar": "صورة الخلفية (سطح المكتب)",
        "en": "Background Image (Desktop)"
      },
      "info": {
        "ar": "اختياري",
        "en": "Optional"
      }
    },
    {
      "id": "background_image_mobile",
      "type": "image",
      "label": {
        "ar": "صورة الخلفية (موبايل)",
        "en": "Background Image (Mobile)"
      },
      "info": {
        "ar": "اختياري - إذا لم يتم تحديده، سيتم استخدام صورة سطح المكتب",
        "en": "Optional - Falls back to desktop image if not set"
      }
    },
    {
      "id": "overlay_opacity",
      "type": "range",
      "label": {
        "ar": "شفافية الطبقة",
        "en": "Overlay Opacity"
      },
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 5
    }
  ]
}
