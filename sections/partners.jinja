<section
  section-id="{{ sectionId }}"
  class="px-4 py-6 md:px-16 md:pb-16"
>
  <div class="theme-container space-y-6">
    {% if settings.title %}
      <h2
        class="text-primary text-[32px] leading-[41.6px] [font-variant:all-small-caps] md:text-[40px] md:leading-[48px]"
      >
        {{ settings.title }}
      </h2>
    {% endif %}
    {% if settings.store_partners %}
      <div class="relative overflow-hidden">
        <div class="fade-left pointer-events-none absolute top-0 z-10 h-full w-20 ltr:left-0 rtl:right-0"></div>
        <div class="fade-right pointer-events-none absolute top-0 z-10 h-full w-20 ltr:right-0 rtl:left-0"></div>
        <div class="scroll-animation flex items-center gap-16">
          {% for partner in settings.store_partners %}
            <div class="flex h-20 w-[138px] shrink-0 items-center justify-center">
              {% if partner.url %}
                <a
                  href="{{ partner.url }}"
                  class="flex h-full w-full items-center justify-center"
                >
                  <img
                    src="{{ partner.image }}"
                    alt="{{ partner.name }}"
                    class="h-10 w-auto object-contain"
                    loading="lazy"
                  />
                </a>
              {% else %}
                <img
                  src="{{ partner.image }}"
                  alt="{{ partner.name }}"
                  class="h-10 w-auto object-contain"
                  loading="lazy"
                />
              {% endif %}
            </div>
          {% endfor %}
          {% for partner in settings.store_partners %}
            <div class="flex h-20 w-[138px] shrink-0 items-center justify-center">
              {% if partner.url %}
                <a
                  href="{{ partner.url }}"
                  class="flex h-full w-full items-center justify-center"
                >
                  <img
                    src="{{ partner.image }}"
                    alt="{{ partner.name }}"
                    class="h-10 w-auto object-contain"
                    loading="lazy"
                  />
                </a>
              {% else %}
                <img
                  src="{{ partner.image }}"
                  alt="{{ partner.name }}"
                  class="h-10 w-auto object-contain"
                  loading="lazy"
                />
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
  {# prettier-ignore-start #}
    <style>
        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-50%);
            }
        }

        [dir="rtl"]

        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(50%);
            }
        }

        .scroll-animation {
            animation: scroll 30s linear infinite;
        }

        .fade-left {
            background: linear-gradient(to right, #ffffff 0%, transparent 100%);
        }

        .fade-right {
            background: linear-gradient(to left, #ffffff 0%, transparent 100%);
        }

        [dir="rtl"] .fade-left {
            background: linear-gradient(to left, #ffffff 0%, transparent 100%);
        }

        [dir="rtl"] .fade-right {
            background: linear-gradient(to right, #ffffff 0%, transparent 100%);
        }
    </style>
    {# prettier-ignore-end #}
</section>
