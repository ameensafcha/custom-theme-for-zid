{
  "template": "sections/carousel.jinja",
  "name": {
    "ar": "دوّار الصور",
    "en": "Image Carousel"
  },
  "settings": [
    {
      "id": "style_variant",
      "type": "select",
      "label": {
        "ar": "نمط العرض",
        "en": "Style Variant"
      },
      "options": [
        {
          "value": "default",
          "label": {
            "ar": "افتراضي",
            "en": "Default"
          }
        },
        {
          "value": "compact",
          "label": {
            "ar": "مضغوط",
            "en": "Compact"
          }
        }
      ],
      "default": "default"
    },
    {
      "id": "min_height_mobile",
      "type": "range",
      "label": {
        "ar": "الحد الأدنى للارتفاع (موبايل)",
        "en": "Minimum Height (Mobile)"
      },
      "min": 400,
      "max": 900,
      "step": 50,
      "unit": "px",
      "default": 700
    },
    {
      "id": "min_height_desktop",
      "type": "range",
      "label": {
        "ar": "الحد الأدنى للارتفاع (سطح المكتب)",
        "en": "Minimum Height (Desktop)"
      },
      "min": 400,
      "max": 900,
      "step": 50,
      "unit": "px",
      "default": 700
    },
    {
      "id": "transition_effect",
      "type": "select",
      "label": {
        "ar": "تأثير الانتقال",
        "en": "Transition Effect"
      },
      "options": [
        {
          "value": "fade",
          "label": {
            "ar": "تلاشي",
            "en": "Fade"
          }
        },
        {
          "value": "slide",
          "label": {
            "ar": "انزلاق",
            "en": "Slide"
          }
        }
      ],
      "default": "fade"
    },
    {
      "id": "autoplay_enabled",
      "type": "checkbox",
      "label": {
        "ar": "تشغيل تلقائي",
        "en": "Enable Autoplay"
      },
      "default": true
    },
    {
      "id": "autoplay_delay",
      "type": "range",
      "label": {
        "ar": "تأخير التشغيل التلقائي",
        "en": "Autoplay Delay"
      },
      "min": 2000,
      "max": 8000,
      "step": 500,
      "unit": "ms",
      "default": 4000,
      "visible_if": {
        "autoplay_enabled": true
      }
    },
    {
      "id": "show_dots",
      "type": "checkbox",
      "label": {
        "ar": "إظهار النقاط",
        "en": "Show Dots"
      },
      "default": true
    },
    {
      "id": "slides",
      "type": "list",
      "label": {
        "ar": "الشرائح",
        "en": "Slides"
      },
      "max_items": 5,
      "settings": [
        {
          "id": "background_image",
          "type": "image",
          "label": {
            "ar": "صورة الخلفية (سطح المكتب)",
            "en": "Background Image (Desktop)"
          },
          "info": {
            "ar": "ارفع صورة بحجم 1920 × 700 بكسل",
            "en": "Upload image 1920 × 700 pixels"
          }
        },
        {
          "id": "background_image_mobile",
          "type": "image",
          "label": {
            "ar": "صورة الخلفية (موبايل)",
            "en": "Background Image (Mobile)"
          },
          "info": {
            "ar": "اختياري - إذا لم يتم تحديده، سيتم استخدام صورة سطح المكتب",
            "en": "Optional - Falls back to desktop image if not set"
          }
        },
        {
          "id": "background_position",
          "type": "select",
          "label": {
            "ar": "موضع الخلفية",
            "en": "Background Position"
          },
          "options": [
            {
              "value": "center",
              "label": {
                "ar": "وسط",
                "en": "Center"
              }
            },
            {
              "value": "top",
              "label": {
                "ar": "أعلى",
                "en": "Top"
              }
            },
            {
              "value": "bottom",
              "label": {
                "ar": "أسفل",
                "en": "Bottom"
              }
            }
          ],
          "default": "center"
        },
        {
          "id": "overlay_opacity",
          "type": "range",
          "label": {
            "ar": "شفافية الطبقة",
            "en": "Overlay Opacity"
          },
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "%",
          "default": 20
        },
        {
          "id": "text_alignment",
          "type": "select",
          "label": {
            "ar": "محاذاة النص",
            "en": "Text Alignment"
          },
          "options": [
            {
              "value": "start",
              "label": {
                "ar": "البداية",
                "en": "Start"
              }
            },
            {
              "value": "center",
              "label": {
                "ar": "وسط",
                "en": "Center"
              }
            },
            {
              "value": "end",
              "label": {
                "ar": "النهاية",
                "en": "End"
              }
            }
          ],
          "default": "start"
        },
        {
          "id": "badge_text_ar",
          "type": "text",
          "label": {
            "ar": "نص الشارة (عربي)",
            "en": "Badge Text (Arabic)"
          },
          "default": "مجموعة جديدة"
        },
        {
          "id": "badge_text_en",
          "type": "text",
          "label": {
            "ar": "نص الشارة (إنجليزي)",
            "en": "Badge Text (English)"
          },
          "default": "NEW COLLECTION"
        },
        {
          "id": "heading_ar",
          "type": "text",
          "label": {
            "ar": "العنوان الرئيسي (عربي)",
            "en": "Heading (Arabic)"
          },
          "default": "تشكيلة 2025"
        },
        {
          "id": "heading_en",
          "type": "text",
          "label": {
            "ar": "العنوان الرئيسي (إنجليزي)",
            "en": "Heading (English)"
          },
          "default": "Superbloom 2025"
        },
        {
          "id": "description_ar",
          "type": "textarea",
          "label": {
            "ar": "الوصف (عربي)",
            "en": "Description (Arabic)"
          },
          "default": "ادخل الموسم بتصاميم انسيابية وأناقة بلا مجهود"
        },
        {
          "id": "description_en",
          "type": "textarea",
          "label": {
            "ar": "الوصف (إنجليزي)",
            "en": "Description (English)"
          },
          "default": "Step into the season with flowing silhouettes and effortless elegance."
        },
        {
          "id": "button_text_ar",
          "type": "text",
          "label": {
            "ar": "نص الزر (عربي)",
            "en": "Button Text (Arabic)"
          },
          "default": "تسوق المجموعة"
        },
        {
          "id": "button_text_en",
          "type": "text",
          "label": {
            "ar": "نص الزر (إنجليزي)",
            "en": "Button Text (English)"
          },
          "default": "Shop the Collection"
        },
        {
          "id": "button_url",
          "type": "url",
          "label": {
            "ar": "رابط الزر",
            "en": "Button URL"
          },
          "default": ""
        }
      ]
    }
  ]
}