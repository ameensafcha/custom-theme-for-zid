      sunset: {
        name: "Sunset",
        primary: "#DC2626",
        "primary-foreground": "#FFFFFF",
        secondary: "#FFFBEB",
        accent: "#FDE047",
        background: "#FFFEFA",
        foreground: "#7F1D1D",
        muted: "#B45858",
        border: "#FDE68A"
      }
    };

    function applyTheme(themeKey) {
      const theme = themes[themeKey];
      if (!theme) return;

      const root = document.documentElement;

      // Apply CSS variables
      root.style.setProperty("--primary", theme.primary);
      root.style.setProperty("--primary-foreground", theme["primary-foreground"]);
      root.style.setProperty("--secondary", theme.secondary);
      root.style.setProperty("--accent", theme.accent);
      root.style.setProperty("--background", theme.background);
      root.style.setProperty("--foreground", theme.foreground);
      root.style.setProperty("--muted", theme.muted);
      root.style.setProperty("--border", theme.border);

      // Update UI
      document.getElementById("theme-name").textContent = theme.name;

      // Update active button
      document.querySelectorAll(".theme-btn").forEach((btn) => {
        btn.classList.toggle("ring-black", btn.dataset.theme === themeKey);
        btn.classList.toggle("ring-transparent", btn.dataset.theme !== themeKey);
      });

      // Save preference
      localStorage.setItem("dev-theme", themeKey);
    }

    // Initialize
    document.querySelectorAll(".theme-btn").forEach((btn) => {
      btn.addEventListener("click", () => applyTheme(btn.dataset.theme));
    });

    // Load saved theme
    const savedTheme = localStorage.getItem("dev-theme") || "default";
    applyTheme(savedTheme);
  })();
</script>
