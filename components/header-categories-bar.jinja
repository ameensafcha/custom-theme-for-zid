{# Categories Bar - Row 2 #}
{% set categories_list = store.categories %}
{% if categories_list | length == 0 %}
{% set categories_list = store.settings.menus.main_menu.items %}
{% endif %}

{% if categories_list | length > 0 %}
<div class="cat-bar"
    style="background-color: {{ settings.header_row2_bg_color | default('#f8f9fa') }}; color: {{ settings.header_row2_text_color | default('#000000') }};">
    <div class="cat-inner">
        {% for category in categories_list %}
        <a href="{{ category.url | localized_url }}" class="cat-link">
            {{ category.name if category.name else category.label }}
        </a>
        {% endfor %}
    </div>
</div>

<style>
    .cat-bar {
        width: 100%;
    }

    .cat-inner {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        flex-wrap: wrap;
        gap: 8px;
        padding: 12px 16px;
        max-width: 1280px;
        margin: 0 auto;
    }

    .cat-link {
        color: inherit;
        text-decoration: none;
        white-space: nowrap;
        padding: 4px 8px;
        transition: opacity 0.2s;
    }

    .cat-link:hover {
        opacity: 0.7;
    }
</style>
{% endif %}