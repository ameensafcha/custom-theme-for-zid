{# Header Categories Bar - Full width, evenly spaced categories #}

{% set menu_items = store.settings.menus.main_menu.items %}
{% set row2_bg = settings.header_row2_bg_color | default('') %}
{% set row2_text = settings.header_row2_text_color | default('') %}

{% if menu_items | length > 0 %}
<div class="bg-secondary border-border-light border-b" {% if row2_bg or row2_text %}
    style="{% if row2_bg %}background-color: {{ row2_bg }};{% endif %}{% if row2_text %}color: {{ row2_text }};{% endif %}"
    {% endif %}>
    <div class="px-4 md:px-8 lg:px-16">
        {# Full width, justify-evenly for even spacing #}
        <div class="categories-scroll flex items-center justify-evenly gap-4 overflow-x-auto py-2.5 w-full"
            data-categories-scroll>
            {% for menu in menu_items %}
            <a href="{{ menu.url | localized_url if menu.resource_type != 'url' else menu.url }}"
                class="text-sm whitespace-nowrap shrink-0 hover:underline transition-colors">
                {{ menu.label }}
            </a>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}