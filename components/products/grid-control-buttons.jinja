{# Mobile view - single column only #}
<div
  class="btn-group btn-group-separated md:!hidden"
  role="radiogroup"
  aria-label="{{ _('Select grid layout') }}"
>
  <label class="btn-group-item btn-group-item-icon">
    <input
      type="radio"
      name="grid_view_mobile"
      value="one"
      class="sr-only"
      data-grid-btn="one"
      aria-label="{{ _('1-column grid') }}"
    />
    {{ icon_one_col }}
  </label>
  <label class="btn-group-item btn-group-item-icon">
    <input
      type="radio"
      name="grid_view_mobile"
      value="list"
      class="sr-only"
      data-grid-btn="list"
      aria-label="{{ _('List view') }}"
    />
    {{ icon_list }}
  </label>
</div>

{# Desktop view - four columns and list #}
<div
  class="btn-group btn-group-separated !hidden md:!flex"
  role="radiogroup"
  aria-label="{{ _('Select grid layout') }}"
>
  <label class="btn-group-item btn-group-item-icon">
    <input
      type="radio"
      name="grid_view_desktop"
      value="four"
      class="sr-only"
      data-grid-btn="four"
      aria-label="{{ _('4-column grid') }}"
      checked
    />
    {{ icon_four_col }}
  </label>
  <label class="btn-group-item btn-group-item-icon">
    <input
      type="radio"
      name="grid_view_desktop"
      value="list"
      class="sr-only"
      data-grid-btn="list"
      aria-label="{{ _('List view') }}"
    />
    {{ icon_list }}
  </label>
</div>
