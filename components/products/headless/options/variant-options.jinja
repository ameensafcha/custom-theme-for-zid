{#
  Variant Options - Orchestrator
  Routes to list or dropdown style based on 'style' parameter.
  See docs/headless/variant-options.md for full documentation.

  Parameters:
    - options (array): Product options with id, name, choices
    - product (object): Product with selected_product
    - style (string): 'list' or 'dropdown' (default: 'dropdown')
#}

{% if options %}
  {% set display_style = style|default('dropdown') %}

  {% if display_style == 'list' %}
    {% with options=options, product=product %}
      {% include 'components/products/headless/options/variant-options-list.jinja' %}
    {% endwith %}
  {% else %}
    {% with options=options, product=product %}
      {% include 'components/products/headless/options/variant-options-dropdown.jinja' %}
    {% endwith %}
  {% endif %}
{% endif %}
