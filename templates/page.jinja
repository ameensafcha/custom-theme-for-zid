{% extends "layout.jinja" %}

{% block title %}{{ page.title }} â€“ {{ store.name }}{% endblock %}

{% block content %}
  {# Breadcrumb Section #}
  <section class="px-4 py-6 md:px-16">
    <div class="theme-container">
      {%
        with
        items=[
          {'href': url_for('home'), 'label': _("Home")},
          {'label': page.title}
        ]
      %}
        {% include 'components/ui/breadcrumb.jinja' %}
      {% endwith %}
    </div>
  </section>

  {# Page Content Section #}
  <section class="px-4 pb-16 md:px-16">
    <div class="theme-container">
      {# Page Title #}
      <h1 class="text-foreground text-h3 text-caps mb-6 text-center">{{ page.title }}</h1>

      {# Rich Text Content #}
      <div class="prose prose-theme mx-auto max-w-[900px]">{{ page.content|safe }}</div>
    </div>
  </section>
{% endblock %}
